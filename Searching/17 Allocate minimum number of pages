#include<bits/stdc++.h>
using namespace std;
bool check_allocation(int arr[], int n, int k, int mid){
    int stu=1, pages=0;
    for(int i=0;i<n;i++){
        if(arr[i]>mid){
            return false;
        }
        if(pages+arr[i]>mid){
            stu++;
            pages=arr[i];
            if(stu>k){
                return false;
            }
        }
        else{
            pages+=arr[i];
        }
        
    }
    return true;
}
int allocate_books(int arr[], int n, int k){
    int ans=-1;
    int sum=0, minv=INT_MAX;
    for(int i=0;i<n;i++){
        sum+=arr[i];
        minv=min(minv, arr[i]);
    }
    int s=minv, e=sum;
    if(n<k){
        return -1;
    }
    while(s<=e){
        int mid=(s+e)/2;
        if(check_allocation(arr, n, k, mid)==true){
            ans=mid;
            e=mid-1;
        }
        else{
            s=mid+1;
        }
    }
    return ans;
}
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int k;
    cin>>k;
    cout<<allocate_books(arr, n, k);
}
